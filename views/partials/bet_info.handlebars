<div class="betBox">
	<div class="betOwnerPic">
		<img class="betOwnerPic" src="{{adminImageLink}}">
	</div>

	
	<div class="betInfo">
		<div class="usrInfo">
				<h5 class="usrName"><strong><span id="captain">CAPTAIN: </span></strong>{{adminPlayer}}</h5>
				<button class="acceptBetButton">Accept Bet!</button>
			</div>
		<div class="prediction">
			<p id="betInput"><strong><span>Prediction: </span></strong>{{prediction}}</p>
			<p><strong><span>Challenge: </span></strong>{{challenge}}</p>
		</div>

		<div class="referee">
			<p><strong><span>Referee: </span></strong>{{referee}}</p>
			<p><strong><span>Participants: </span></strong>{{adminPlayer}}, {{secondPlayer}}</p>
		</div>

		<div class="dayPrice">
			<p class="betPrice"><strong><span>Bet Price: </span></strong>{{price}} dollars</p>
			<p><strong><span>Judgement Day: </span></strong>{{judgmentDay}}</p>
		</div>
	</div>
</div>
