<div class="betBox" id="joinedPending">
	<div class="betOwnerPic">
		<img class="betOwnerPic" src="{{adminImageLink}}">
	</div>
	<div class="betInfo">
		<div class="usrInfo">
				<h5 class="usrName"><strong><span id="captain">CAPTAIN: </span></strong>{{adminPlayer}}</h5>

				<form method="POST" action="/bet-response/{{id}}" class="form-horizontal betResForm">
					<button type="submit" value='decline' name='betResponse' class="btn btn-default">No Way Man!</button>
				</form>

				<form method="POST" action="/bet-response/{{id}}" class="form-horizontal betResForm">
					<button type="submit" value='accept' name='betResponse' class="btn btn-default">You're On!</button>
				</form>
{{!-- 
				<button class="acceptBetButton">You're On!</button>
				<button class="declineBetButton">No Way Man!</button> --}}
		</div>

		<div class="prediction">
			<p><strong><span id="joinedPending">{{adminPlayer}}'s Prediction: </span ></strong>{{prediction}}</p>
			<p><strong><span id="joinedPending">{{secondPlayer}}'s Challenge: </span></strong>{{challenge}}</p>
		</div>

		<div class="referee">
			<p><strong><span id="joinedPending">Referee: </span></strong>{{referee}}</p>
			<p><strong><span id="joinedPending">Participants: </span></strong>{{adminPlayer}}, {{secondPlayer}}</p>
		</div>

		<div class="dayPrice">
			<p class="betPrice"><strong><span id="joinedPending">Bet Price: </span id="joinedPending"></strong>{{price}} dollars</p>
			<p><strong><span id="joinedPending">Judgement Day: </span></strong >Aug 30 2016<!-- {{judgmentDay}} --></p>
		</div>
	</div>
</div>
