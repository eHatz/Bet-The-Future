<link rel="stylesheet" type="text/css" href="/assets/css/profile.css">
<div class="container" id="navbarBox">
	<div class="row">
		<nav class="navbar navbar-default navbar-static-top" id="navBar">
  			<div class="container">
  			<a href="/home">
          <img class= "logo" src="assets/images/logo.png" alt="logo">
			 </a>
			 <ul class="nav nav-pills" id="navPills">
			  <li role="presentation" class="active"><a href="/home">Home</a></li>
			  <li role="presentation"><a href="/profile">Profile</a></li>
			  <li role="presentation"><a href="/logOut">Log Out</a></li>
			</ul> 
  			</div>
		</nav>
	</div>
</div>
	

	<div class='row'>
		<div class=" col-md-offset-2 col-md-7 col-sm-offset-1 col-sm-10 col-lg-offset-2 col-lg-6 cloudDiv" id='profileCloud'>
			<div class="row">
				<div class="col-md-offset-4 col-md-8">
					<div class="profileInfo">
						<img class="usrPic" src="{{user.ImageLink}}">
							<div class="rightSide">
								<h3 class="firstName">{{user.FirstName}}</h3>
								<h3 class="lastName">{{user.LastName}}</h3><br>
								<p class="betsMade"><strong><span>Bets Made:</span></strong>148</p><br>
								<p class="betsMade"><strong><span>Bets Accepted:</span></strong> 37</p><br>
								<p class="betsMade"><strong><span>Winning: </span></strong>58%</p><br>
								<p class="betsMade"><strong><span>Lost: </span></strong>32%</p><br>
								<p class="betsMade"><strong><span>Approval Rating: </span></strong>100%</p>
							</div>
					</div>

					<div class="profileBets">
						{{#each userOwnsBets}}
							{{> owner_bet_info this}}
						{{/each}}
						{{#each ownerPending}}
							{{> owner_pending_bet_info this}}
						{{/each}}
						{{#each betReferee}}
							{{> ref_bet_info this}}
						{{/each}}
						{{#each refPending}}
							{{> ref_pending_bet_info this}}
						{{/each}}
					</div>
				</div>
			</div>
			
		</div>
	</div>
					












