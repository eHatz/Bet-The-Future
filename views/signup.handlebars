<div id='formSignUp'>
<form method="POST" action="/signUp" class="form-horzontal">
	<h1>Sign Up</h1>

	<div class="form-group">
		<label for="inputFirstName" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="FirstName">First Name</label>
			<input required type="text" class="form-control" id="inputFirstName" placeholder="" name="firstName">
		</div>

		<label for="inputLastName" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="LastName">Last Name</label>
			<input required type="text" class="form-control" id="inputLastName" placeholder="" name="lastName">
		</div>

		<label for="emialInput" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="email">Email:</label>
			<input required type="email" class="form-control" id="inputEmail" placeholder="" name="email">
		</div>

		<label for="inputUsername" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="userName">Username:</label>
			<input required type="text" class="form-control" id="inputUsername" placeholder="" name="userName">
		</div>

		<label for="inputPassword" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="password">Password:</label>
			<input required type="password" class="form-control" id="inputPassword" placeholder="" name="password">
		</div>

		<label for="inputPassword" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="password">Confirm Password:</label>
			<input required type="password" class="form-control" id="confirmPassword" placeholder="" name="password2">
		</div>

		<label for="inputUserImage" class="col-sm-2 control-label"></label>
		<div class="col-sm-10">
			<label for="userImage">User Image:</label>
			<input required type="userImage" class="form-control" id="userImage" placeholder="" name="image">
		</div>

		<div class="col-sm-offset-8 col-sm-10">
			<button type="submit" class="btn btn-default">Sign Up</button>
		</div>
	</div>
</form>
